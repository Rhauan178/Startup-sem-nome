<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.seu.restaurante.GerenteViewController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Gerenciamento de Cardápio" />

        <TableView fx:id="tabelaCardapio" prefHeight="200.0">
            <columns>
                <TableColumn fx:id="colunaId" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="colunaNome" prefWidth="150.0" text="Nome" />
                <TableColumn fx:id="colunaPreco" prefWidth="100.0" text="Preço" />
            </columns>
        </TableView>

        <HBox spacing="10.0" alignment="CENTER">
            <children>
                <Button fx:id="botaoRemover" onAction="#removerItemSelecionado" text="Remover Selecionado" />
                <Button fx:id="botaoLimpar" onAction="#limparCampos" text="Limpar / Novo" />
                <Button onAction="#abrirRelatorios" text="Ver Relatórios" style="-fx-base: #17a2b8; -fx-text-fill: white;" />
                <Button onAction="#abrirGerenciamentoFuncionarios" text="Gerir Funcionários" />
            </children>
        </HBox>

        <VBox spacing="5.0" style="-fx-border-color: lightgray; -fx-padding: 10px; -fx-border-radius: 5px;">
            <children>
                <Label text="Adicionar Novo Item:" style="-fx-font-weight: bold;"/>
                <HBox spacing="10.0">
                    <children>
                        <TextField fx:id="campoId" editable="false" promptText="ID (Gerado automaticamente)" />
                        <TextField fx:id="campoNome" promptText="Nome do Prato" />
                        <TextField fx:id="campoPreco" promptText="Preço (ex: 55.00)" />
                    </children>
                </HBox>
                <TextField fx:id="campoDescricao" promptText="Descrição" />
                <TextField fx:id="campoCategoria" promptText="Categoria (ex: Pizzas)" />
                <Button fx:id="botaoAdicionarSalvar" onAction="#salvarItem" text="Adicionar Novo Item" />
            </children>
        </VBox>
    </children>
</VBox>